(use posix)

(define iflags '())
(define lflags '())

(with-input-from-pipe 
  "mysql_config --include" 
  (lambda() 
    (set! iflags (read-line))))

(with-input-from-pipe 
  "mysql_config --libs" 
  (lambda() 
    (set! lflags (read-line))))

(compile -C ,iflags
         -L ,lflags
         -s mysql.scm)

(install-extension 
  'mysql 
  '("mysql.so")
  '((version "0.2")))

