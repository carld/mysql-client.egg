; A small (experimental) MySQL client library for chicken-scheme.
;
; To install, from the directory containing mysql.setup:
;
;   chicken-install -s -test
;
; Example program below, to compile and run:
;
;   make
;   ./scm-mysql-example

(require-library mysql)

(define sql (make-mysql-connection "localhost" "root" #f "information_schema"))

(define fetch (sql "select * from schemata"))

(define (fetch-loop)
  (let ((row (fetch)))
    (if row 
       (begin
          (printf "~A~%" row)
          (fetch-loop)))))

(fetch-loop)


